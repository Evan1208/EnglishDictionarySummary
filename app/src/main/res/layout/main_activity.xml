<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <customView.editText.ViewEditText
                android:id="@+id/etEnglish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="輸入英文單字"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#e5e5e5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tvCross"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCross"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:text="✖︎"
                android:textColor="@color/white"
                android:textSize="25dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/webView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/viewGap"
                android:layout_alignParentBottom="true" />

            <HorizontalScrollView
                android:id="@+id/HTextRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <View
                android:id="@+id/viewGap"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@id/HTextRelativeLayout" />

        </RelativeLayout>

    </LinearLayout>
</layout>